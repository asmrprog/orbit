{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*", "css-prop.d.ts"],
  "exclude": [
    "**/*.stories.*",
    "**/*.test.*",
    "**/__tests__/**/*",
    "**/__typetests__/**/*",
    "**/__examples__/*.*",
    "**/examples.*"
  ]
}
